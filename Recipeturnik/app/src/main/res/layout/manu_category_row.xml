<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="169dp"
    android:background="@color/silver">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@mipmap/breakfast_img"
        android:id="@+id/menuRowlayout"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:gravity="bottom">

        <RelativeLayout
            android:background="#a8ffffff"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/descCategoryTextView"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/titleCategoryTextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:typeface="serif"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleCategoryTextView"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textStyle="normal|bold|italic"
                android:typeface="serif" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>